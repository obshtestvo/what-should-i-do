<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>What should I do with my...?</display-name>
	 
	 <servlet>
	    <servlet-name>jersey</servlet-name>
	    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
	    <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>bg.obshtestvo.rest</param-value>
        </init-param>
        <init-param>
            <param-name>org.glassfish.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>bg.obshtestvo.config.Application</param-value>
        </init-param>
	    <load-on-startup>1</load-on-startup>
	 </servlet>
	  	
	 <servlet-mapping>
		 <servlet-name>jersey</servlet-name>
		 <url-pattern>/api/*</url-pattern>
	 </servlet-mapping>
	 
     <context-param>
    	<param-name>resteasy.providers</param-name>
    	<param-value>bg.obshtestvo.security.SecurityInterceptor</param-value>
	</context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>bg.obshtestvo.config.ApplicationContext,bg.obshtestvo.config.security.SecurityConfig</param-value>
    </context-param>
	 
	 <context-param>
        <param-name>contextClass</param-name>
        <param-value>
            org.springframework.web.context.support.AnnotationConfigWebApplicationContext
        </param-value>
    </context-param>

	 
	 <listener>
		 <listener-class>
		 	org.springframework.web.context.ContextLoaderListener
		 </listener-class>
	 </listener>
</web-app>